<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="Give out the path of source video file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/src_path_txt"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:scrollHorizontally="true"
            android:hint="Paste path here" />

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="Give out the path of destination mp4 file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/dest_path_txt"
            android:layout_width="match_parent"
            android:scrollHorizontally="true"
            android:layout_height="89dp"
            android:hint="Input path here" />

        <Button
            android:id="@+id/select_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choose File" />

        <Button
            android:id="@+id/convert_btn"
            android:layout_gravity="center"
            android:text="Convert"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/video_transform_progress_txt"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
